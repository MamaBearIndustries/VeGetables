<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mamabearindustries.vegetables.Pantry_Search_Screen"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="5dp"
        android:fontFamily="casual"
        android:text="Search Food"
        android:textAlignment="center"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/search_sub_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginStart="6dp"
        android:fontFamily="serif"
        android:text="Search Food Item:"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/searchView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_title" />

    <TextView
        android:id="@+id/search_sub_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginStart="6dp"
        android:fontFamily="serif"
        android:text="Grocery Store Inventory:"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/item_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:background="@color/Grey"
        android:queryHint="Search Here"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_sub_text" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="105dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/search_sub_text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

    <CheckBox
        android:id="@+id/item_2"
        android:layout_width="208dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="40dp"
        android:text="CheckBox"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/item_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_1" />

    <CheckBox
        android:id="@+id/item_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:text="CheckBox"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_2"
        app:layout_constraintStart_toStartOf="@+id/item_2"
        app:layout_constraintTop_toBottomOf="@+id/item_2" />

    <CheckBox
        android:id="@+id/item_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="14dp"
        android:text="CheckBox"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/item_2"
        app:layout_constraintEnd_toEndOf="@+id/item_2"
        app:layout_constraintStart_toStartOf="@+id/item_2"
        app:layout_constraintTop_toBottomOf="@+id/search_sub_text2" />

</android.support.constraint.ConstraintLayout>
